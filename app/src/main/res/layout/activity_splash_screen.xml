<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/loadingBlue"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="-55dp"
        android:layout_marginEnd="-55dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/loading_blue" />

    <ImageView
        android:id="@+id/loadingOrange"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="-55dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/loading_orange" />

    <ImageView
        android:id="@+id/loadingTeal"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="-55dp"
        android:layout_marginEnd="-55dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/loading_teal" />

    <TextView
        android:id="@+id/vusie_splash_screen_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/josefin_sans_thin"
        android:text="v u s i e"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="78sp" />

    <ImageView
        android:id="@+id/loadingPink"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="-55dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/loading_pink" />

    <ImageView
        android:id="@+id/loadingMidnight"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="-55dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/loading_midnight" />

    <ImageView
        android:id="@+id/loadingGreen"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="-55dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/loading_green" />

</LinearLayout>

